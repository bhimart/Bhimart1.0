<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_checkin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="sample.com.closebuy.Checkin"
    android:background="#fff"
    android:orientation="vertical"
    tools:showIn="@layout/activity_checkin">
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d1d1d1"
        android:padding="16dp"
        android:orientation="horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/shopaddr"
        android:textSize="15sp"
        android:textColor="#313131"/>



    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="Reedem Offer"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical">

    <Button
        android:layout_width="wrap_content"
        android:elevation="5dp"
        android:text="Apply"
        android:layout_gravity="center"
        android:background="@drawable/button"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:id="@+id/button2" />
</LinearLayout>


<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="20sp"
    android:textColor="#484747"
    android:gravity="center"
    android:layout_marginTop="5dp"
    android:text="EXCITING"/>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/kmdetilas"
    android:textSize="18sp"
    android:gravity="center"
    android:textColor="#484747"
    android:layout_marginTop="4dp"
    />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#484747"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:text="click ok for directions"/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/bot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="1"
        android:animateLayoutChanges="true"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:weightSum="2">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lin"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ok"
                android:text="ok"
                android:textSize="18sp"
                android:textColor="#ffffff"
                android:background="@drawable/cartbutton1"/>
        </LinearLayout>


       <!-- <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/cancel"
            android:layout_toRightOf="@+id/lin"
            android:textColor="#ffffff"
            android:background="#2091ff"
            android:layout_marginLeft="2dp"
            android:text="cancel" />-->

    </LinearLayout>


</LinearLayout>
