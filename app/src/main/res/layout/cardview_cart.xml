<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    app:cardCornerRadius="2dp"
    app:cardUseCompatPadding="true"
    card_view:contentPadding="16dp"
    card_view:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cardbackground"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:padding="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="mi redmi note 3 back"
                    android:textSize="18sp"
                    android:textColor="#141415"
                    android:layout_weight="1"
                    android:id="@+id/prdname"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="13dp"
    android:orientation="horizontal">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="18sp"
                   android:textColor="#131313"
                   android:text="₹"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#0e0e0e"
                    android:id="@+id/prdprice"
                    android:text="200"/>
</LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:scaleType="centerInside"
                    android:layout_gravity="end"
                    android:layout_marginRight="20dp"
                    android:id="@+id/prdimg"/>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/sub"
                        android:layout_gravity="start"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/ic_remove_circle_outline_black_36dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/qtyval"
                        android:text="1"
                        android:layout_toRightOf="@+id/sub"
                        android:textColor="#131313"
                        android:textStyle="bold"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:textSize="20sp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/add"
                        android:layout_toRightOf="@+id/qtyval"
                        android:background="@drawable/ic_add_circle_outline_black_36dp"/>

                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#aca9a9"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">



            <Button
                android:layout_width="183dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textStyle="normal"
                android:textColor="#09090a"
                android:gravity="center"
                android:background="#ffffff"
                android:textSize="20sp"
                android:id="@+id/remove"
                android:text="Remove"/>
            <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#aca9a9"
        android:layout_gravity="center">
    </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_weight="0.40"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="#09090a"
                    android:text="₹"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:gravity="center"
                    android:textColor="#09090a"
                    android:textSize="20sp"
                    android:text=" 12000"
                    android:id="@+id/prdtotal" />
            </LinearLayout>

        </LinearLayout>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/pid"
    android:visibility="gone"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vendorqty"
            android:visibility="gone"/>
    </LinearLayout>
</android.support.v7.widget.CardView>